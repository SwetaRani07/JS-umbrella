  const [data, setData] = useState([]);
  const [sortOrder, setSortOrder] = useState('asc');

  useEffect(() => {
    async function callApi() {
      try {
        const response = await fetch('https://jsonplaceholder.typicode.com/users');
        const userdata = await response.json();
        setData(userdata);
      } catch (error) {
        console.log(error);
      }
    }
    callApi();
  }, []);

  const handleSort = (order) => {
    const sortedData = [...data].sort((a, b) => {
      if (order === 'asc') {
        return a.name.localeCompare(b.name);
      } else {
        return b.name.localeCompare(a.name);
      }
    });
    setData(sortedData);
    setSortOrder(order);
  };

  return (
    <div>
      <h1>Fetching User List from API and then sorting them in ascending and descending based on button click</h1>
      <div>
        <button onClick={() => handleSort('asc')}>Sort Ascending</button>
        <button onClick={() => handleSort('desc')}>Sort Descending</button>
      </div>
      <ul>
        {data.map((user) => {
          return <li key={user.id}>{user.name}</li>;
        })}
      </ul>
    </div>
  );
